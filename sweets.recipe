[DEFAULT]
implement = Server:%(major)s/%(name)s
name      = prosody-sugar
summary   = Core services for Sugar users
license   = MIT
homepage  = http://wiki.sugarlabs.org/go/The_Server

major     = 1
version   = 0.8.2
stability = stable

[Package]
source    = %(name)s-%(version)s.tar.gz
requires  = prosody

[Build]
install   = install -m 0755 -d %(DESTDIR)s/%(LIBDIR)s/prosody/modules &&
            cp -r plugins/* %(DESTDIR)s/%(LIBDIR)s/prosody/modules/
